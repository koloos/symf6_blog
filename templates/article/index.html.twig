{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
{% include "admin/_adminNav.html.twig" %}

    <h1>Article index</h1>

    <main class="t-contain">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>DatePublication</th>
                <th>ImageSrc</th>
                <th>NombreVues</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.contenu }}</td>
                <td>{{ article.datePublication ? article.datePublication|date('d/m/Y') : '' }}</td>
                <td><img src="{{ article.imageSrc }}"></td>
                <td>{{ article.nombreVues }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}">Create new</a>
    </div>
{% endblock %}
